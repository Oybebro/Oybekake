async function askAI() {
    let question = document.getElementById("aiQuestion").value;

    if (!question.trim()) {
        alert("Iltimos, savol kiriting!");
        return;
    }

    let responseElement = document.getElementById("aiResponse");
    responseElement.innerHTML = "‚è≥ AI javob bermoqda...";

    try {
        let response = await fetch("https://api.openai.com/v1/chat/completions", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "Authorization": "Bearer YOUR_OPENAI_API_KEY" // API kalitini shu joyga qo‚Äòying
            },
            body: JSON.stringify({
                model: "gpt-4-turbo",
                messages: [{ role: "user", content: question }],
                max_tokens: 100
            })
        });

        let data = await response.json();
        responseElement.innerHTML = data.choices[0].message.content;
    } catch (error) {
        responseElement.innerHTML = "‚ùå Xatolik yuz berdi!";
    }
}
function askAI() {
    let question = document.getElementById("aiQuestion").value.toLowerCase();
    let responseElement = document.getElementById("aiResponse");

    let responses = {
        "salom": "Salom! Qanday yordam bera olaman?",
        "byudjet bo‚Äòyicha maslahat bering": "Oylik byudjetingizni rejalashtirish uchun avvalo xarajatlaringizni yozib chiqing.",
        "chatbot qanday ishlaydi?": "Men AI yordamchi chatbotman! Savollaringizga javob bera olaman.",
        "xayr": "Xayr! Yana kutib qolaman."
    };

    responseElement.innerHTML = responses[question] || "Kechirasiz, bu savolga hali tayyor javobim yo‚Äòq.";
