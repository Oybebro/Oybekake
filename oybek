<script>
function checkAdmin() {
    let pass = document.getElementById("adminPass").value;
    if (pass === "Admin123") {
        document.getElementById("login").style.display = "none";
        document.getElementById("adminPanel").style.display = "block";
    } else {
        alert("Noto‚Äòg‚Äòri parol!");
    }
}
</script>
